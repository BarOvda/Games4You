<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/home_proggressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="342dp"
        android:layout_marginBottom="341dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:orientation="vertical" >
       <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
           android:text="Newest PS4 Games"
           android:visibility="invisible"
           android:id="@+id/ps_text"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ps4_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Newest XboxOne Games"
            android:visibility="invisible"

            android:id="@+id/xbox_text"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/xbox_one_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</RelativeLayout>






